{
  "name": "tajmr",
  "version": "0.1.0",
  "description": "Record some time sometime",
  "main": "main.js",
  "engines": {
    "node": "5.x"
  },
  "scripts": {
    "postinstall": "npm run build",
    "start": "node server.js",
    "copy": "cp client/index.html client/favicon.ico public && cp -a client/assets public/assets",
    "prebuild": "rm -rf public && mkdir public public/js public/css && npm run copy",
    "build": "npm run styles & npm run scripts",
    "styles": "stylus --compress --include-css client/styles/main.styl --out public/css",
    "scripts": "browserify --transform babelify --entry client/js/app.js --outfile public/js/main.js --standalone app",
    "electron": "electron .",
    "watch": "parallelshell 'npm run watch:server' 'npm run watch:scripts' 'npm run watch:styles'",
    "watch:scripts": "nodemon --exec 'npm run build -- --debug' --watch client --ext js,jsx",
    "watch:styles": "npm run styles -- --watch",
    "watch:server": "nodemon --exec 'npm start' --watch server"
  },
  "author": "Pontus Lundin <lundin.pontus@gmail.com> (https://github.com/hontas)",
  "repository": {
    "type": "git",
    "url": "https://github.com/hontas/tajmr.git"
  },
  "license": "ISC",
  "devDependencies": {
    "electron-prebuilt": "^0.35.1",
    "eslint": "^1.10.3",
    "eslint-plugin-react": "^3.11.2",
    "nodemon": "^1.8.1",
    "parallelshell": "^2.0.0"
  },
  "dependencies": {
    "babel-cli": "^6.2.0",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.1.18",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "cuid": "^1.3.8",
    "express": "^4.13.3",
    "react": "^0.14.3",
    "react-redux": "^4.0.0",
    "redux": "^3.0.4",
    "react-dom": "^0.14.3",
    "react-timer-mixin": "^0.13.3",
    "stylus": "^0.52.4"
  }
}
