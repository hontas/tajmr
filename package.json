{
  "name": "Tajmr",
  "version": "0.6.0",
  "description": "Record time sometime",
  "main": "main.js",
  "engines": {
    "node": "8.x"
  },
  "scripts": {
    "lint": "eslint --ignore-path .gitignore --ext .js,.jsx .",
    "test": "mocha --recursive --require babel-register --reporter landing",
    "tdd": "npm test -- --watch --watch-extensions jsx --reporter min",
    "copy": "cp client/sw.js public && cp -a client/assets public/assets",
    "prebuild": "rm -rf public && mkdir public && npm run copy",
    "build": "NODE_ENV=production webpack",
    "deploy": "npm run build && GIT_DEPLOY_DIR=public ./scripts/deploy.sh",
    "postversion": "git push --follow-tags",
    "prewatch": "npm run prebuild",
    "watch": "webpack-dev-server --watch"
  },
  "pre-push": [
    "lint",
    "test"
  ],
  "author": "Pontus Lundin <lundin.pontus@gmail.com> (https://github.com/hontas)",
  "repository": {
    "type": "git",
    "url": "https://github.com/hontas/tajmr.git"
  },
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.2.0",
    "babel-core": "^6.7.4",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.1.18",
    "better-react-spinkit": "^2.0.2",
    "case-sensitive-paths-webpack-plugin": "^2.1.1",
    "chai": "^4.1.0",
    "classnames": "^2.2.5",
    "css-loader": "^0.28.7",
    "dirty-chai": "^2.0.1",
    "eslint": "^4.10.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "firebase": "^4.6.0",
    "html-webpack-plugin": "^2.30.1",
    "imports-loader": "^0.7.1",
    "jade": "^1.11.0",
    "jade-loader": "^0.8.0",
    "lolex": "^2.1.3",
    "md5": "^2.2.1",
    "mocha": "^4.0.1",
    "pre-push": "^0.1.1",
    "promise-polyfill": "^6.0.2",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-day-picker": "^6.2.0",
    "react-dev-utils": "^4.1.0",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.6",
    "redux": "^3.2.1",
    "redux-thunk": "^2.0.1",
    "script-ext-html-webpack-plugin": "^1.8.7",
    "style-ext-html-webpack-plugin": "^3.4.3",
    "style-loader": "^0.19.0",
    "stylus": "^0.54.2",
    "stylus-loader": "^3.0.1",
    "uglify-es": "^3.1.5",
    "uglifyjs-webpack-plugin3": "^1.0.0-beta",
    "webpack": "^3.8.1",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-server": "^2.9.3",
    "webpack-hot-middleware": "^2.20.0"
  }
}
