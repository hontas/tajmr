@import "normalize.css";

@import "variables";
@import "spinkit";

html {
  box-sizing: border-box;
}
*, *:before, *:after {
  box-sizing: inherit;
}

body {
  font-family: -apple-system, ".SFNSText-Regular", "San Francisco", "Roboto", "Segoe UI", "Helvetica Neue", "Lucida Grande", sans-serif;
  margin: 0;
  padding: 0;
}

html,
body,
#root {
  height: 100%;
}

@import "variables";

@import "../js/components/**/*";

.login {
  height: 130px;
  width: 400px;
  position: absolute;

  top: 50%;
  left: 50%;

  margin-top: -70px;
  margin-left: -200px;

  input {
    width: 100%;
    margin-bottom: 0.5em;
    padding: 0.5em;
  }

  button {
    background: whitesmoke;
    border: 1px solid #BFBFBF;
    float: right;
    padding: 0.5em;
  }
}
