@import "normalize.css";

html {
  box-sizing: border-box;
}
*, *:before, *:after {
  box-sizing: inherit;
}

body {
  font-family: -apple-system, ".SFNSText-Regular", "San Francisco", "Roboto", "Segoe UI", "Helvetica Neue", "Lucida Grande", sans-serif;
  margin: 0;
  padding: 0;
}

/**
 * Layout
 */

.application {
  display: flex;
  flex-direction: column;
}

/**
 * Component styles
 */

.header {
  flex: 1;
  display: flex;

  h1 {
    font-size: 30vw;
    margin: 0 auto;
  }
}

.digital-clock {
  flex: 1;
  display: flex;

  time {
    font-size: 15vw;
    display: block;
    line-height: 20vw;
    margin: 0 auto;
  }
}

.button {
  background: #eee;
  border: none;
  cursor: pointer;
  display: block;
  font-family: -apple-system, ".SFNSText-Regular", "San Francisco", "Roboto", "Segoe UI", "Helvetica Neue", "Lucida Grande", sans-serif;
  font-size: 6vw;
  margin-top: 1em;
  padding: 0.5em 1em;
  width: 100%;
  -webkit-user-select: none;

  &:hover {
    background: #e9e9e9;
  }

  &:active {
    background: #ddd;
  }
}


.interval-list {
  list-style: none;
  padding-left: 0;
}

.interval-list-item {
  display: flex;
  margin-bottom: 0.5em;

  & > * {
    flex: 1;
    margin-left: 0.5em;
  }

  .interval-list-item-note,
  .interval-list-item-time {
    border-width: 0;
    font-size: 1em;
    padding: 0.5em;

    &[disabled] {
      background: whitesmoke;
      color: darkgray;
      cursor: not-allowed;
    }
  }

  .interval-list-item-note {
    flex: 4;
  }

  .button {
    display: inline-block;
    flex: 2;
    font-size: 1em;
    margin-top: 0;
    width: auto;
  }

  .delete {
    border-left: 1px solid lightgray;
    flex: .5;
    margin-left: 0;
    padding: 0.5em;

    &:hover {
      background: red;
      color: white;
    }
  }
}


