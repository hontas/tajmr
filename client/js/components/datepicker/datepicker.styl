$block = '.date-picker';

{$block} {
  padding-right: .5em;
  position: relative;

  &__calendar-btn {
    background: transparent;
    border: none;
    height: 100%;
    padding: 3px 0 0;
    &:focus {
      outline: none;
    }
  }

  &__calendar {
    font-size: smaller;
    left: 0;
    padding-top: .6em;
    position: absolute;
    top: 2.6em;
    z-index: 10;

    .DayPicker-wrapper {
      background: white;
      color: #333;
    }
  }

  &:focus {
    outline: none;
  }

  &--show-picker {
    color: $text-color-light;
  }

  &--disabled {
    color: lightblue;
  }
}
