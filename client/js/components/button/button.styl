.button {
  background: #eee;
  border: none;
  cursor: pointer;
  display: block;
  font-family: -apple-system, ".SFNSText-Regular", "San Francisco", "Roboto", "Segoe UI", "Helvetica Neue", "Lucida Grande", sans-serif;
  font-size: 6vw;
  margin-top: 1em;
  padding: 0.5em 1em;
  width: 100%;
  -webkit-user-select: none;

  &:hover {
    background: #e9e9e9;
  }

  &:active {
    background: #ddd;
  }
}
