.hamburger,
.hamburger:before,
.hamburger:after {
  background-color: currentColor;
  width: 100%;
  height: 0.2em;
  transition: transform .2s;
}

.hamburger {
  position: relative;
  display: block;

  &:before,
  &:after {
    position: absolute;
    left: 0;
    margin-top: -0.6em;
    content: " ";
  }
  &:after {
    margin-top: 0.6em;
  }
}

.hamburger--active {
  transform: rotate(-45deg);
  &:before {
    margin-top: 0;
  }
  &:after {
    transform: rotate(90deg);
    margin-top: 0;
  }
}
