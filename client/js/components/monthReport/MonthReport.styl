.MonthReport {
  padding: 0 .5em;
}

.MonthReport__title {
  margin-bottom: 0;
  text-align: center;
}
.MonthReport__subtitle {
  margin: 0 0 .5em;
  text-align: center;
  .button {
    background-color: transparent;
    color: white;
  }
}

.MonthReport__list {
  list-style-type: none;
  padding-left: 0;
}

.MonthReport__list-item {
  $borderStyle = 1px solid rgba(255,255,255,.75);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 .5em;

  &:first-child,
  &:last-child {
    border-top: $borderStyle;
  }

  &.not-work {
    background-color: alpha($danger-color, 75%);
  }
}

.MonthReport__list-item__title,
.MonthReport__list-item__value {
  margin: .5em 0;
}
