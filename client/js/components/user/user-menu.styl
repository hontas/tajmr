.user-menu {
  background-color: alpha(#2d3e50, .9);
  color: whitesmoke;
  padding: 1em 2em;

  input:not([type=checkbox]) {
    width: 100%;
  }

  & .user-menu__fieldset {
    margin-top: .5em;
  }

  .pure-menu-link {
    color: whitesmoke;
  }

  .pure-button {
    display: block;
    width: 100%;
  }

  .pure-button-primary {
    margin-bottom: .5em;
  }

  .profile-image {
    border-radius: 50%;
    margin-left: 0.5em;
    position: relative;
    top: 3px;
    vertical-align: middle;
    width: 50px;
  }
}

.user-menu__row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-menu__label {
  display: flex;
  align-items: center;
  padding: .25em 0;
  justify-content: space-between;
}

.user-menu__log-out {
  border: none;
  background-color: transparent;
}
