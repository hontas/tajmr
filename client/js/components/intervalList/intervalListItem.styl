.interval-list-item {
  display: flex;
  margin-bottom: 0.5em;

  .interval-list-item-note {
    color: #333;
    font-size: 1em;
    padding: 0.5em;
    flex: 4;
    margin: 0 0.5em;

    &[disabled] {
      background: whitesmoke;
      color: darkgray;
      cursor: not-allowed;
    }
  }

  .button {
    display: inline-block;
    font-size: 1em;
    margin: 0 0.5em;
    width: auto;
  }

  .delete {
    border-left: 1px solid lightgray;
    flex-basis: 40px;
    margin-left: 0;
    padding: 0.5em;

    &:hover {
      background: red;
      color: white;
    }
  }
}
