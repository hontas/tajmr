.navbar {
  background: #EEE;
  padding: 0.5em;

  .version {
    color: #AAA;
    float: left;
  }

  .brand {
    float: left;
    font-size: 1.25em;
    line-height: 0.85em;
    margin: 0 0.4em;
  }
}

.navbar-menu {
  float: right;
  list-style: none;
  padding: 0;
  margin: 0
  li {
    margin-left: 5px;
  }
}

.profile {
  padding-right: 35px;
  position: relative;

  .profile-image {
    border-radius: 50%;
    position: absolute;
    top: -5px;
    right: -7px;
    width: 29px;
  }
}
