.navbar {
  background: $primary-color-dark;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.5em;

  .version {
    color: #AAA;
    display: none;
  }

  .brand {
    color: $text-color-primary;
    font-size: 1.25em;
    line-height: 0.85em;
    margin: 0;
  }

  .loading-text {
    display: none;
    @media screen and (min-width: $screen-small) {
      display: initial;
    }
  }

  .pure-menu-children {
    left: -212%;
    @media screen and (min-width: $screen-small) {
      left: -103%;
    }
  }

  .profile-image {
    border-radius: 50%;
    margin-left: 0.5em;
    position: relative;
    top: 3px;
    vertical-align: middle;
    width: 30px;
  }

  .menu-link__text {
    display: none;
    @media screen and (min-width: $screen-small) {
      display: initial;
    }
  }

  .pure-menu-link:focus {
    background-color: transparent;
  }

  .pure-menu-link:hover,
  .pure-menu-active > .pure-menu-link {
    background-color: rgba(255, 255, 255, .1);
  }
}

.navbar-menu {
  display: flex;
  align-items: center;
  margin-right: .5em;
  a {
    color: $text-color-light;
  }
  .icon-cog {
    transform: translateY(3px);
    @media screen and (min-width: $screen-small) {
      display: none;
    }
  }
}
